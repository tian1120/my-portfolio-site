{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
		"strictNullChecks": true,
		"baseUrl": ".",
		"verbatimModuleSyntax": true,
		"paths": {
			"@/components/*": ["src/components/*.astro"],
			"@/layouts/*": ["src/layouts/*.astro"],
			"@/data/*": ["src/data/*"],
			"@/styles": ["src/styles/"],
			"@/assets/*": ["src/assets/*"],
		}
	},
	"exclude": ["node_modules", "**/node_modules/*", ".vscode", "dist"]
}